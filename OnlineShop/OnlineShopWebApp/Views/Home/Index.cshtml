@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">

    @foreach (var product in Model)
    {
        <div class="col-3 card shadow">
            <img class="card-img-top" src="@product.ImagePath" alt="Image" />

            <div class="card-body">
                <a href="/product/index/@product.Id">
                    <h5>@product.Name</h5>
                </a>

                <h5>@product.Cost $</h5>
                <a class="btn-dark" href="/cart/add?productId=@product.Id" role="button">Add to my cart</a>
            </div>
        </div>
    }
</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
