@model Cart

@if (Model == null)
{
    <h3>Your cart is empty</h3>
}
else
{
    <div class="row">
        <div class="col">

            <table class="table">
                <thead>
                    <tr>
                    <th>Name</th>
                    <th>Price, $</th>
                    <th>Amount</th>
                    <th>Cost, $</th>
                    <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.Items)
                    {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Cost</td>
                        <td>@item.Amount</td>
                        <td>@item.Cost</td>
                        <td>
                            <a class="btn btn-primary" href="/home/index" role="button">+</a>
                            <a class="btn btn-primary" href="/home/index" role="button">-</a>
                        </td>
                    </tr>
                }
                    </tbody>
                </table>
                <div class="text-right">
                    <h3>Final Cost</h3>
                    <h3>@Model.Cost</h3>
                </div>
                <div class="text-center">
                    <a class="btn btn-primary" href="/home/index" role="button">Continue shopping</a>
                    <a class="btn btn-success" href="#" role="button">Checkout</a>
                </div>
            </div>
        </div>
    }